<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<VersionPrefix>4.0.0</VersionPrefix>
	</PropertyGroup>
	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net7.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ApplicationIcon>Assets\CheckVoteWin.ico</ApplicationIcon>
		<AssemblyName>NetTally</AssemblyName>
		<DebugType>embedded</DebugType>
		<TrimMode>copyused</TrimMode>
		<BuiltInComInteropSupport>true</BuiltInComInteropSupport>
	</PropertyGroup>
	<PropertyGroup>
		<Product>NetTally</Product>
		<Description>Program for tallying forum user votes.</Description>
		<Company>Wayward Gamers</Company>
		<NeutralLanguage>en-US</NeutralLanguage>
		<Copyright>2015-2022</Copyright>
	</PropertyGroup>
	<ItemGroup>
		<AvaloniaResource Include="Assets\*" />
	</ItemGroup>
	<ItemGroup>
		<AvaloniaResource Include="Assets\Styles\NetTallyStyles.xaml" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="Avalonia" Version="11.0.3" />
		<PackageReference Include="Avalonia.Desktop" Version="11.0.3" />
		<PackageReference Include="Avalonia.Diagnostics" Version="11.0.3" />
		<PackageReference Include="Avalonia.Fonts.Inter" Version="11.0.3" />
		<PackageReference Include="Avalonia.ReactiveUI" Version="11.0.3" />
		<PackageReference Include="Avalonia.Themes.Fluent" Version="11.0.3" />
		<PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.1" />
		<PackageReference Include="MessageBox.Avalonia" Version="3.1.3" />
		<PackageReference Include="Microsoft.Extensions.Hosting" Version="7.0.1" />
	</ItemGroup>
	<ItemGroup>
		<ProjectReference Include="..\NetTally.Core\NetTally.Core.csproj" />
	</ItemGroup>
	<ItemGroup>
		<Resource Include="Assets\CheckVoteWin.ico" />
	</ItemGroup>
</Project>
